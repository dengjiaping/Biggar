<?xml version="1.0" encoding="utf-8"?>
<cn.biggar.biggar.view.RootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:titleBarTitle="我的任务"
    app:isShowRootLine="false">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_corner_radius="1.5dp"
        app:tl_indicator_height="4dp"
        app:tl_indicator_width="20dp"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="#80333333"
        app:tl_textsize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@mipmap/sale_m_bg_3x" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</cn.biggar.biggar.view.RootLayout>