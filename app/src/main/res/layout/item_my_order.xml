<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_press_selector"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/app_f7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="已完成"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@mipmap/good_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:src="@color/app_9" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="时尚眼镜型号黑框时尚眼镜型号黑框时尚眼镜型号黑框"
                android:textColor="@color/app_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lines="1"
                android:singleLine="true"
                android:text="颜色：xxx"
                android:textColor="@color/app_6"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lines="1"
                android:singleLine="true"
                android:text="￥12345"
                android:textColor="@color/app_3"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/app_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:text="实付款："
            android:textColor="@color/app_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:lines="1"
            android:singleLine="true"
            android:text="￥12345"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:lines="1"
            android:singleLine="true"
            android:text="共2件商品"
            android:textColor="@color/app_6"
            android:textSize="11sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <com.allen.library.SuperButton
            android:id="@+id/btn_left"
            android:layout_width="79.5dp"
            android:layout_height="26.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/btn_right"
            android:text="查看物流"
            android:textColor="@color/app_1a83d6"
            android:visibility="gone"
            app:sCornersRadius="9999dp"
            app:sSolidColor="@color/whites"
            app:sStrokeColor="@color/app_1a83d6"
            app:sStrokeWidth="1dp" />

        <com.allen.library.SuperButton
            android:id="@+id/btn_right"
            android:layout_width="79.5dp"
            android:layout_height="26.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="再次购买"
            android:textColor="@color/colorPrimary"
            app:sCornersRadius="9999dp"
            app:sSolidColor="@color/whites"
            app:sStrokeColor="@color/colorPrimary"
            app:sStrokeWidth="1dp" />

    </RelativeLayout>
</LinearLayout>