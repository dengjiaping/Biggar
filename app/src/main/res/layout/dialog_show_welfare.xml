<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_transparent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_card_bg_lv"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/card_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_card_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:src="@mipmap/close" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/red_packet_gift_certificate_lv"
                    android:layout_width="match_parent"
                    android:layout_height="125.7dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/card_content_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/dialog_card_head_img_iv"
                            android:layout_width="28.7dp"
                            android:layout_height="28.7dp"
                            android:layout_margin="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dialog_card_title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="太空（中国）"
                                android:textColor="@color/app_text_color_s"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/dialog_card_time_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="可兑换时间"
                                android:textColor="@color/app_text_color_q"
                                android:textSize="8.7sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/red_packet_gift_certificate_iv"
                            android:layout_width="72dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/red_packet_gift_certificate_title_tv"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:maxLines="1"
                                android:text="限量香水"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/red_packet_gift_certificate_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:maxLines="1"
                                    android:text="礼券"
                                    android:textColor="@color/app_text_color_s"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/dialog_card_hint_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="(满100可用)"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/red_packet_draw_tv"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_rounded_corners_theme"
                    android:gravity="center"
                    android:text="立即领取"
                    android:textColor="@color/whites"

                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/dialog_card_image_iv"
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>