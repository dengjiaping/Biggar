<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="238dp">

        <ImageView
            android:id="@+id/brand_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gear_image_default"
            app:layout_heightPercent="83.16%"
            app:layout_widthPercent="100%" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#68000000" />

        <ImageView
            android:id="@+id/brand_logo_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:src="@mipmap/gear_image_default"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_border_white_1dp"
            app:layout_heightPercent="30.27%"
            app:layout_marginTopPercent="30.40%"
            app:layout_widthPercent="56.8%">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_border_white_1px"
                app:layout_heightPercent="91.45%"
                app:layout_widthPercent="97.11%">


                <TextView
                    android:id="@+id/brand_title1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:textColor="@color/app_white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/brand_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/brand_title1_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:textColor="@color/app_white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/brand_iv"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/triangle" />

        <TextView
            android:id="@+id/brand_title2_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/brand_iv"
            android:background="@color/app_white"
            android:gravity="center"
            android:text="Biggar"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/brand_title2_tv"
            android:background="@color/app_b7" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</RelativeLayout>