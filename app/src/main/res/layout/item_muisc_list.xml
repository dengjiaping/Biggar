<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/app_vertical_margin"
    android:paddingBottom="@dimen/app_vertical_margin"
    android:paddingLeft="@dimen/app_horizontal_margin"
    android:paddingRight="@dimen/app_horizontal_margin"
    >
    <TextView
        style="@style/app_text_subhead"
        android:id="@+id/music_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="海阔天空"
        />

    <TextView
        style="@style/app_text_caption"
        android:id="@+id/singer_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="beyond"
        />

</LinearLayout>