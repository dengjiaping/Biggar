<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout


        android:background="@drawable/shape_oval_white"
        android:layout_width="310dp"
        android:layout_height="200dp">

        <TextView

            android:id="@+id/draw_red_state_text_tv"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/draw_red_state_close_iv"
            android:layout_alignRight="@id/draw_red_state_text_tv"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close"
            />
        <TextView
            android:id="@+id/draw_red_state_ok_tv"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/whites"
            android:background="@drawable/shape_rounded_corners_theme"
            android:layout_width="130dp"
            android:text="确定"
            android:layout_height="26.7dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@id/draw_red_state_text_tv"/>
    </RelativeLayout>
</LinearLayout>