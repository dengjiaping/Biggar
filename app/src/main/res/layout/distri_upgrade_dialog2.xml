<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="升级条件"
        android:textColor="#333"
        android:textSize="16dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="升级一级代理需要比格认证哦~"
        android:textColor="#666"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_oval_blue"
            android:gravity="center"
            android:text="B"
            android:textColor="@color/whites"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/two_condition_arrow_3x" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_oval_gray"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/whites"
            android:textSize="16sp" />
    </LinearLayout>


    <com.allen.library.SuperButton
        android:id="@+id/upgrade"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="我要认证"
        android:textColor="@color/whites"
        android:textSize="16sp"
        app:sCornersRadius="9999dp"
        app:sSolidColor="@color/colorPrimary" />
</LinearLayout>