<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/app_white">

    <RelativeLayout
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_border_d"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goodsimg_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gear_image_default" />

        <TextView
            android:id="@+id/goodsname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goodsimg_iv"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4sp"
            android:singleLine="true"
            android:text="GoodsNameGoodsName"
            android:textColor="@color/app_text_color_s"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/goodsname_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goodsprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:singleLine="true"
                android:text="￥00.0"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/pay_tv"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_rounded_corners_d6"
                android:gravity="center"
                android:text="购买"
                android:textColor="@color/app_text_color_z"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
