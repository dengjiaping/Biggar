<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="207dp"
        app:layout_marginLeftPercent="2.4%"
        app:layout_marginRightPercent="2.4%">


        <cn.biggar.biggar.view.roundedimageview.RoundedImageView2
            android:id="@+id/annunciate_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gear_image_default"
            app:riv_border_width="0dip"
            app:riv_corner_radius="8dip" />

        <ImageView
            android:id="@+id/brand_logo2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/exclusive" />

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/scan_eye"
            android:drawablePadding="3dp"
            android:text="00"
            android:textColor="@color/app_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/brand_get_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/number_tv"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_rounded_theme"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="接受邀约"
            android:textColor="@color/whites"
            android:textSize="10sp" />

        <!--    android:background="@drawable/rounded_bg"-->
        <!--android:background="#68000000"-->
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_rounded_corners_33"
            app:layout_heightPercent="39.19%">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/brand_logo_iv"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gear_image_default"
                app:civ_border_color="@color/app_e5e5e5"
                app:civ_border_width="1dp"
                app:layout_marginLeftPercent="2.33%"
                app:layout_marginTopPercent="7.4%" />

            <RelativeLayout
                android:id="@+id/brand_name_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/brand_logo_iv"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="3.1%"
                app:layout_marginTopPercent="11%">

                <TextView
                    android:id="@+id/brand_name_tv"
                    style="@style/wh_ww"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Name"
                    android:textColor="@color/app_white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/brand_phone_img_icon"
                    style="@style/wh_ww"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/brand_share_img_icon"
                    android:layout_toStartOf="@+id/brand_share_img_icon"
                    android:background="@mipmap/brand_phone_img_icon"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/brand_share_img_icon"
                    style="@style/wh_ww"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="18dp"
                    android:background="@mipmap/brand_share_img_icon"
                    android:visibility="invisible"

                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/content_tv"
                style="@style/wh_ww"
                android:layout_alignLeft="@id/brand_name_lv"
                android:layout_below="@id/brand_name_lv"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Name"
                android:textColor="@color/app_white"
                android:textSize="12sp"
                app:layout_marginTopPercent="8%" />


            <TextView
                android:id="@+id/places_tv"
                style="@style/wh_ww"
                android:layout_alignParentRight="true"
                android:layout_below="@id/content_tv"
                android:layout_marginBottom="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp"
                app:layout_marginRightPercent="5.53%"
                app:layout_marginTopPercent="6.5%" />

            <TextView
                android:id="@+id/v"
                style="@style/wh_ww"
                android:layout_alignTop="@+id/bonus_layout"
                android:layout_toLeftOf="@+id/places_tv"
                android:layout_toStartOf="@+id/places_tv"
                android:text="报名人数："
                android:textColor="@color/app_white"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/bonus_layout"
                style="@style/wh_mw"
                android:layout_below="@id/content_tv"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/v"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="3.68%"
                app:layout_marginTopPercent="10.5%">

                <ImageView
                    style="@style/wh_ww"
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/white_cup" />

                <TextView
                    style="@style/wh_ww"
                    android:text="@string/tv_total_bonus"
                    android:textColor="@color/app_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/total_bonus"
                    style="@style/wh_ww"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp" />

                <TextView
                    style="@style/wh_ww"
                    android:text="@string/tv_mian_zhi"
                    android:textColor="@color/app_white"
                    android:textSize="12sp" />
            </LinearLayout>

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
