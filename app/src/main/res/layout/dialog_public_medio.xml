<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_squ_transparency"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_vidoe"
            android:gravity="center"
            android:padding="10dp"
            android:text="视频" />

        <TextView
            android:id="@+id/take_pictrue_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_squ_transparency"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_photo"
            android:gravity="center"
            android:padding="10dp"
            android:text="照片" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_ll"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:src="@mipmap/ic_close" />


</RelativeLayout>