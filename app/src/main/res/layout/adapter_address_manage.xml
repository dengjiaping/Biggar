<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/whites"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/app_text_color_z"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/address_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="15608468098"
            android:textColor="@color/app_text_color_z"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detailed_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="" />
    </LinearLayout>

    <View
        style="@style/line_view_vertical"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/text_my_address_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:button="@drawable/selector_check_box"
                android:checked="false" />

            <TextView
                android:id="@+id/text_my_address_item_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/app_text_color_q"
                android:textSize="14sp"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/edit_address_button"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_squ_app_red"
                android:gravity="center"
                android:text="编 辑"
                android:textColor="@color/whites"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/delete_address_button"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_squ_app_red"
                android:gravity="center"
                android:text="删 除"
                android:textColor="@color/whites"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>