<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_details_userinfo" />

    <View style="@style/line_view_vertical" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/discreteScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fcf:dsv_orientation="horizontal" />


    <View style="@style/line_view_vertical" />

    <TextView
        android:id="@+id/details_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5sp"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:text="Biggar"
        android:textColor="#333"
        android:textSize="14sp" />

</LinearLayout>