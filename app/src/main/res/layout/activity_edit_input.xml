<?xml version="1.0" encoding="utf-8"?>
<cn.biggar.biggar.view.RootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_input_content_et"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/shape_rounded_border_theme_big"
        android:ellipsize="end"
        android:gravity="start"
        android:hint="请输入内容."
        android:padding="9dp"
        android:textColor="@color/app_text_color_z"
        android:textColorHint="@color/app_text_color_q"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/edit_input_complete_tv"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_rounded_corners_theme"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/app_white"
        android:textSize="15sp" />
</cn.biggar.biggar.view.RootLayout>