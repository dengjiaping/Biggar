<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_comment_tip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:paddingStart="14dp"
        android:text="评论"
        android:textColor="@color/app_3"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/no_comment_3x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="赶快去评论吧"
            android:textColor="@color/app_9" />
    </LinearLayout>

    <com.allen.library.SuperButton
        android:id="@+id/tv_comment"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="立即评论"
        android:textColor="@color/colorPrimary"
        app:sCornersRadius="9999dp"
        app:sSolidColor="@color/white"
        app:sStrokeColor="@color/colorPrimary"
        app:sStrokeWidth="1dp" />

</LinearLayout>