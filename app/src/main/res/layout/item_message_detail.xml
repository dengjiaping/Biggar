<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_e5e5e5"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_rounded_corners_d8d9da"
            android:gravity="center"
            android:text="05-11 20:00"
            android:textColor="@color/whites"
            android:textSize="11sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="28dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/official_news_3x" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@mipmap/triangle_3x" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_oval_white_5"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="请问有兴趣跟我们合作吗？"
                        android:textColor="#333" />

                    <ImageView
                        android:id="@+id/iv_goods"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="14dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.allen.library.SuperButton
                        android:id="@+id/tv_refuse"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="不同意"
                        android:textColor="#999"
                        app:sCornersRadius="8dp"
                        app:sSolidColor="#fff"
                        app:sStrokeColor="#999"
                        app:sStrokeWidth="1dp" />

                    <com.allen.library.SuperButton
                        android:id="@+id/tv_agree"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="同意"
                        android:textColor="@color/whites"
                        app:sCornersRadius="8dp"
                        app:sSolidColor="@color/colorPrimary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>